{
	"projectType": "azd",
	"resources": [
	  {
		"type": "azurecontainerapp",
		"instances": [{
			"name": "notes"
		}]
	  },
      {
        "type": "azuremysqldatabase",
        "instances": [{
            "name": "notes"
        }]
      }
    ],
    "bindings": [
        {
            "source": "${azurecontainerapp.notes}",
            "target": "${azuremysqldatabase.notes}",
            "connection": "secret",
            "customKeys": {
                "AZURE_MYSQL_HOST": "DATABASE_HOST",
                "AZURE_MYSQL_USER": "DATABASE_USER",
                "AZURE_MYSQL_PASSWORD": "DATABASE_PASSWORD",
                "AZURE_MYSQL_DATABASE": "DATABASE_NAME",
                "AZURE_MYSQL_PORT": "DATABASE_PORT"
            } 
        }
    ],
	"services": [
		{
		  "host": "${azurecontainerapp.notes}",
		  "language": "js",
		  "project": "."
		}
	],
	"settings": [{
		"resource": "${azurecontainerapp.notes}",
		"envs": []
	}]
}